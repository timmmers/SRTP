/* components/my-modal/my-modal.wxss */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999; /* 确保模态框位于最上层 */
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明黑色遮罩层 */
  z-index: -1; /* 确保内容在遮罩层之上 */
}

.modal-content {
  background-color: #f8f8f8;
  width: 82%;
  max-height: 450px;
  border-radius: 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  z-index: 1;
}

.modal-header {
  width: 100%;
  padding: 22px 0; /* 调整按钮的内边距，使按钮高度合适 */
  border: none; /* 无边框 */
  background-color: #f8f8f8; /* 按钮背景颜色 */
  color: black; /* 按钮文字颜色（深蓝色） */
  font-size: 18px; /* 文字大小 */
  font-weight: bold;
  text-align: center;
}

.modal-button {
  width: 100%;
  padding: 16px 0; /* 调整按钮的内边距，使按钮高度合适 */
  border: none; /* 无边框 */
  border-top: 0.5px solid #9698a0; /* 上边界 */
  background-color: #f8f8f8; /* 按钮背景颜色 */
  color: #319ad8; /* 按钮文字颜色（深蓝色） */
  font-size: 18px; /* 文字大小 */
  font-weight: bold;
  text-align: center;
}

.scroll-view {
  border: none;
  height: auto; /* 滚动视图高度占满容器 */
  max-height: 300px;
}
