/* pages/map/index/index.wxss */
/*  地图样式 */
.myMap {
    width: 100%;
    position: fixed;
}

.designed-button {
    position: fixed;
    bottom: 50rpx;
    display: flex;
    justify-content: center;
    text-align: center;
    font-family: "STSong";
    border-radius: 10rpx;
    width: 350rpx;
    font-size: 45rpx;
    font-weight: 900;
    letter-spacing: 6rpx;

    background: #d8aa14;
    border: 2px solid #3a6ad2;
    transform: translate3d(0px, 0%, 0px);
    text-decoration: none;
    transition-delay: 0.6s;
    overflow: hidden;
    padding: 10px 20px;
}

.item {
    padding: 10px;
    border: 2rpx solid #ccc;
    margin: 6rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.icon-button {
  position: fixed;
  background-color: #ffffff;
  border-radius: 15rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  margin-top: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
}

@keyframes scaleAnimation {
  0% {
    transform: scale(1); /* 初始大小 */
  }
  50% {
    transform: scale(1.5); /* 变大 */
  }
  100% {
    transform: scale(1); /* 回到初始大小 */
  }
}

.design-icon {
  position: fixed;
  bottom: 50rpx;
  width: 120rpx;
  height: 120rpx;
  animation: scaleAnimation 2s infinite ease-in-out;
}

.route-bg {
  width: 90%;
  display: flex;
  justify-content: center;
  box-shadow: 1rpx 1rpx 19rpx 1rpx rgba(0, 0, 0, .03);
  border-radius: 20rpx;
  background-color: rgba(172, 182, 182, 0.8);
  padding-top: 10px;
  padding-bottom: 10px;
}

.route-msg1 {
  display: flex;
  white-space: nowrap;
  height: 140rpx;
  width: 100%;  /* 调整为 100% */
  justify-content: flex-start;  /* 根据内容对齐方式选择 */
  padding-left: 10px;
  padding-right: 10px;
}


.route-msg2 {
  display: flex;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
}

.route {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.txt {
  box-shadow: 1rpx 1rpx 19rpx 1rpx rgba(0, 0, 0, .03);
  border-radius: 20rpx;
  background-color: rgba(172, 182, 182, 0.8);
  width: 90%;
  padding: 5px;
}