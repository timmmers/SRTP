/* pages/map/search/search.wxss */
/*  输入框的样式  */
.input-container {
    background: rgba(182, 245, 224, 0.7);
    border: 5rpx solid rgb(195, 230, 232);
    padding: 5px 8px;
    margin: 2px 4px;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.input {
    padding-left: 15rpx;
    font-size: 17px;
    height: 42px;
    background: rgb(255, 255, 255);
    border-radius: 10rpx;
    flex-grow: 1;
    margin-right: 15rpx;
    border: 5rpx solid rgb(148, 209, 211);
}

.type-container {
  background: rgba(182, 245, 224, 0.7);
  border: 5rpx solid rgb(195, 230, 232);
  padding: 5px 8px;
  margin: 2px 4px;
  border-radius: 10rpx;
}

/*  选项的样式  */
.items {
    margin: 3px 4px;
    background-color: rgba(182, 245, 224, 0.5);
    font-size: 32rpx;
    line-height: 15px;
    padding: 10rpx;
    border-radius: 10rpx;
    border: 5rpx solid rgba(103, 165, 161, 0.6);
}
